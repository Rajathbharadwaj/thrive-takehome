# Copy this file to terraform.tfvars and update with your values
# This configuration is optimized for the take-home challenge

# AWS Configuration
aws_region = "us-east-1"
environment = "production"
project_name = "thrive-takehome-final"
owner = "reviewer"

# EKS Configuration  
cluster_name = "thrive-prod-cluster-final"
instance_type = "t3.medium"
desired_nodes = 3
min_nodes = 3
max_nodes = 5

# ECR Repository (will be created automatically)
ecr_repository_name = "thrive-hello-world"

# Alerting (CHANGE THIS EMAIL!)
alert_email = "your-email@example.com"

# GitHub OIDC (CHANGE THIS TO YOUR FORKED REPO!)
github_repo = "yourusername/thrive-takehome"

# Simplified configuration - uses default VPC
use_default_vpc = true

# Production features
enable_https = false  # Set to true if you have a domain
domain_name = "your-domain.com"  # Replace with your actual domain
